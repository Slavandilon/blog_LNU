<%- include('./partials/header.ejs') %>

<div class="container">
    <% if(posts.length) { %> <!-- Якщо щось в постах є, по відображати наступний div -->
        <div>
            <h1 class="pb-3 mb-5 border-bottom text-center">
                Всі пости
            </h1>
            <p>
                У творчих проектах макет є життєво важливим для ефективного обміну повідомленнями.
                Лорем Іпсум дозволяє дизайнерам експериментувати з різними елементами, дозволяючи
                їм зосередитися на композиції, не відволікаючись від конкретного вмісту.
            </p>
            <table class="table table-striped sorting">
                <thead>
                    <tr>
                        <th>Назва</th>
                        <th>Автор</th>
                        <th class="text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </th>
                        <th class="text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Якщо довжина постів більше ніж нуль, то для кожного з цих постів (forEach) -->
                    <% posts.forEach( (post)=> { %>                        
                        <tr id="id_<%= post._id %>">
                            <td>
                                <a href="/post/<%= post._id %>">
                                    <%= post.title %>
                                </a>
                            </td>
                            <td>
                                <%= post.author %>
                            </td>
                            <td class="text-center">
                                <a href="/edit-post/<%= post._id %>" class="btn btn-outline-success btn-sm"
                                    title="Редагувати" aria-label="Редагувати">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path
                                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                </a>
                            </td>
                            <td class="text-center">
                                <!-- 
                                    <a href="" class="btn btn-outline-danger btn-sm confirmDeletion"
                                            data-id="<%= post._id %>" title="Видалити" aria-label="Видалити">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                            <path
                                                    d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                            <path
                                                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                        </svg>
                                    </a>
                                -->

                                <button type="button" class="btn btn-outline-danger btn-sm confirmDeletion"
                                        data-id="<%= post._id %>" title="Видалити" aria-label="Видалити">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                        <path
                                                d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path
                                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                    </svg>
                                </button>
                                <!-- Клас confirmDeletion для того щоб потім зробити попередження "точно хочеш видалити?"-->
                                <!-- data-id -- спеціальний атрибут, в який передаємо значення конкретного id -->
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <h1>Постів ще немає!</h1>
    <% } %>
</div>

<!-- Щоб пости видалялись самі по собі і сторінка оновлювалась -->
<script>
    document.addEventListener("click", (e) => {
        const id = e.target?.dataset?.id || null;
        if (id) {
            fetch(`/posts/${id}`, {
                method: "DELETE",
            }).then(() => {
                window.location.reload();
            });
        }
    });
</script>

<%- include('./partials/footer.ejs') %>